<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/card">
            <TextView
                android:id="@+id/indicename"
                android:textSize="20sp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:text="Indice"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/indicename">
            <ImageView
                android:id="@+id/map"
                android:layout_width="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/country"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_alignLeft="@+id/indicename" />
            </LinearLayout>

            <TextView
            android:id="@+id/currprice"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Currprice"/>
        <TextView
            android:id="@+id/chg"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:layout_below="@+id/currprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Change"/>
        <TextView
            android:id="@+id/perchg"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"
            android:layout_marginBottom="7dp"
            android:layout_below="@id/chg"
            android:text="Perchg"/>
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_below="@+id/chg"
            android:layout_toLeftOf="@+id/perchg"
            android:layout_alignBottom="@+id/perchg" />

        </RelativeLayout>
</android.support.v7.widget.CardView>


